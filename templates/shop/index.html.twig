{% extends 'base.html.twig' %}

{% block title %}Shop index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Shop List</h1>
        <a href="{{ path('app_shop_new') }}" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Owner Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Zip</th>
                        <th>Own Delivery System</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for shop in shops %}
                        <tr>
                            <td>{{ shop.id }}</td>
                            <td>{{ shop.name }}</td>
                            <td>{{ shop.ownername }}</td>
                            <td>{{ shop.email }}</td>
                            <td>{{ shop.phone }}</td>
                            <td>{{ shop.address }}</td>
                            <td>{{ shop.city }}</td>
                            <td>{{ shop.zip }}</td>
                            <td>{{ shop.ownDeliverySystem ? 'Yes' : 'No' }}</td>
                            <td class="d-flex">
                                <a href="{{ path('app_shop_show', {'id': shop.id}) }}" class="btn btn-info btn-sm me-2">
                                    <i class="bi bi-eye"></i> Show
                                </a>
                                <a href="{{ path('app_shop_edit', {'id': shop.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10" class="text-center">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
